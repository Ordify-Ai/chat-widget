{
  "name": "ordify-chat-widget-vue2",
  "version": "1.0.0",
  "description": "A professional Vue 2 chat widget for integrating Ordify AI agents into applications with minimal setup.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vite --port 3002",
    "lint": "eslint src --ext ts,js,vue --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "vue2",
    "vue",
    "chat",
    "ai",
    "ordify",
    "widget",
    "typescript",
    "chatbot",
    "assistant",
    "conversation"
  ],
  "author": {
    "name": "Ordify AI",
    "email": "support@ordify.ai",
    "url": "https://ordify.ai"
  },
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ordify-ai/chat-widget.git"
  },
  "bugs": {
    "url": "https://github.com/ordify-ai/chat-widget/issues"
  },
  "homepage": "https://github.com/ordify-ai/chat-widget#readme",
  "peerDependencies": {
    "vue": "^2.6.0"
  },
  "dependencies": {
    "lucide-vue": "^0.517.0",
    "markdown-to-jsx": "^7.7.13",
    "use-stick-to-bottom": "^1.1.1",
    "vue-styled-components": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-vue2": "^2.3.1",
    "@vue/test-utils": "^1.3.6",
    "eslint": "^8.55.0",
    "eslint-plugin-vue": "^9.0.0",
    "jsdom": "^27.0.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^3.6.4",
    "vitest": "^1.0.4",
    "vue": "^2.7.14",
    "vue-template-compiler": "^2.7.14"
  }
}
